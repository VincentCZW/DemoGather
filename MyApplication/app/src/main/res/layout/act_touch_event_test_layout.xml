    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f31231">

    <com.example.vincent.demogather.view.TouchViewGroup
        android:id="@+id/view_group"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#ddd234">

        <com.example.vincent.demogather.view.TouchView
            android:id="@+id/view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#234fff"/>

    </com.example.vincent.demogather.view.TouchViewGroup>
</RelativeLayout>